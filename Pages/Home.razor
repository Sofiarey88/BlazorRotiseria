@page "/"

<div class="container-fluid">
    <div class="background-image">
        <div class="text-overlay">
            <h1 class="display-3">Bienvenido a Nuestra Rotisería</h1>
            <p class="lead">Disfruta de las mejores delicias caseras.</p>
        </div>
    </div>
</div>

<style>
    body, html {
        height: 100%; /* Asegura que el cuerpo y el html ocupen el 100% de la altura */
        margin: 0; /* Elimina el margen por defecto */
        overflow: hidden; /* Evita el scroll */
    }

    .background-image {
        background-image: url('https://i.pinimg.com/control/564x/85/4b/3f/854b3fcd1287e7a9d6e393d6b0c56301.jpg');
        background-size: cover; /* Cambia a 'cover' para que la imagen cubra todo el contenedor */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        background-position: center; /* Centra la imagen */
        height: 90vh; /* Ajusta la altura al 100% de la ventana */
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        color: white; /* Cambia el color del texto */
    }

    .text-overlay {
        text-align: center;
        backdrop-filter: blur(5px); /* Opcional: aplica un desenfoque al fondo del texto */
        padding: 20px; /* Espaciado alrededor del texto */
        background-color: rgba(0, 0, 0, 0.5); /* Fondo oscuro semi-transparente para mejorar la legibilidad */
    }

    h1 {
        font-size: 4rem; /* Tamaño del título */
        font-weight: bold; /* Negrita para el título */
    }

    p {
        font-size: 1.5rem; /* Tamaño del subtítulo */
    }
</style>
